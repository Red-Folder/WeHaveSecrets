@model BackupsViewModel

@{
    ViewData["Title"] = "Database Backups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Database Backups</h2>

<div class="row">
    <div class="col-md-12">
        @if(Model.Successful)
        {
            <p>Backup succesful</p>
        }
        else
        {
            <p>Backup failed</p>
        }
    </div>
</div>

@if (Model.AvailableBackups != null && Model.AvailableBackups.Count > 0)
{
    <div class="row">
        @foreach (var backup in Model.AvailableBackups)
        {
            <div class="col-md-12">
                <p>@backup.Created</p>
                <p><a href="@backup.Url">@backup.Url</a></p>
            </div>
        }
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <p>No backups found</p>
        </div>
    </div>
}
